[% PROCESS util.tt -%]
<h1 class="section-title">Books</h1>
<div class="hero mb-4">
  <p class="lead">All of the Perl School titles.</p>
</div>

<ul class="list-unstyled book-list">
[% FOREACH book IN books.sort('title') -%]
  <li class="book-item d-flex align-items-start gap-3 mb-3">
    <div class="book-thumb-wrap">
      [% IF book.image -%]
        [% an_image(book.image, book.title, 'book-thumb', 'png') -%]
      [% ELSE -%]
        <span class="book-thumb placeholder" aria-hidden="true"></span>
      [% END -%]
    </div>

    <div class="book-meta">
      <div class="fw-semibold">
        <a href="/books/[% book.slug %]/" class="book-title">
          [% book.title | html %]
        </a>
        <span class="muted"> â€” </span>
        [% book.author.name | html %]
      </div>

      [% IF book.blurb -%]
        <p class="mb-0 book-blurb">
          [% book.blurb %]
        </p>
      [% END -%]
    </div>
  </li>
[% END -%]
</ul>

